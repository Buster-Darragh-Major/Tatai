<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane onKeyPressed="#handleKeyPress" prefHeight="500.0" prefWidth="800.0" styleClass="root" stylesheets="@../stylesheets/TataiTheme.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controllers.LevelSelectWindowController">
   <columnConstraints>
      <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints valignment="CENTER" vgrow="ALWAYS" />
      <RowConstraints vgrow="ALWAYS" />
   </rowConstraints>
   <children>
      <Label stylesheets="@../stylesheets/TataiTheme.css" text="Level Select" textFill="WHITE">
         <font>
            <Font size="60.0" />
         </font>
         <effect>
            <DropShadow blurType="ONE_PASS_BOX" />
         </effect>
         <GridPane.margin>
            <Insets bottom="25.0" top="25.0" />
         </GridPane.margin>
      </Label>
      <GridPane GridPane.rowIndex="1">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="448.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints fillHeight="false" maxHeight="121.0" minHeight="86.0" prefHeight="87.0" vgrow="NEVER" />
            <RowConstraints fillHeight="false" maxHeight="109.0" minHeight="77.0" prefHeight="108.0" vgrow="NEVER" />
            <RowConstraints fillHeight="false" maxHeight="109.0" minHeight="77.0" prefHeight="108.0" vgrow="NEVER" />
          <RowConstraints maxHeight="129.0" minHeight="65.0" prefHeight="114.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <JFXButton fx:id="_level1" buttonType="RAISED" onAction="#handleLevel1Click" prefHeight="50.0" prefWidth="100.0" text="Level 1" textFill="WHITE" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
            <JFXButton fx:id="_level2" buttonType="RAISED" onAction="#handleLevel2Click" prefHeight="50.0" prefWidth="100.0" text="Level 2" textFill="#f8f8f8" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS" />
            <JFXButton fx:id="_practice" buttonType="RAISED" onAction="#handlePracticeClick" prefHeight="50.0" prefWidth="100.0" text="Practice" textFill="#f8f8f8" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
            <JFXButton fx:id="_customList" buttonType="RAISED" onAction="#handleCustomListClick" prefHeight="50.0" prefWidth="100.0" text="Custom List" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
         </children>
      </GridPane>
      <FontAwesomeIconView fx:id="_menuButton" glyphName="ARROW_LEFT" onMouseClicked="#handleMenuButtonClick" onMousePressed="#handleMenuButtonClick" onMouseReleased="#handleMenuButtonClick" size="35" styleClass="icon-standard-clickable" GridPane.halignment="LEFT" GridPane.valignment="TOP">
         <effect>
            <DropShadow blurType="ONE_PASS_BOX" />
         </effect>
         <GridPane.margin>
            <Insets left="15.0" top="15.0" />
         </GridPane.margin>
      </FontAwesomeIconView>
   </children>
</GridPane>
